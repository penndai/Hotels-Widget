<link href="~/Content/bootstrap.css" rel="stylesheet" />

@model WebApplication1.Domain.Place

<div class="col-sm-12 well" style="width:300px">
    <div class="row">
        <div class="col-sm-12">
            @ViewBag.filename       
            <input type="submit" class="btn btn-info btn-XSmall" value="Refresh" onclick="RefreshWidget(@ViewBag.cityid)" />            
        </div>
    </div>
   
    @foreach (var p in Model.Hotels)
    {
        <div class="row">
            <div class="col-sm-5">
                <img src="@Url.Content("~/Images/Hotels/"+p.Image)" alt="Image" />
            </div>

            <div class="col-sm-7">
                <div class="row">
                    <div class="col-sm-12">
                        <small>
                            @p.Name
                        </small>
                    </div>                   
                </div>
                <div class="row">
                    <div class="col-sm-12">
                        <span class="pull-right label label-primary">@p.Rate.ToString("c")</span>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12">
                        <span class="pull-right">
                            @for (int i = 0; i <= p.StarRating; i++)
                            {
                                <img src="@Url.Content("~/Images/star.png")" alt="Image" />
                            }
                            @for (int j = 0; j <= 5 - p.StarRating; j++)
                            {
                                <img src="@Url.Content("~/Images/star_grey.png")" alt="Image" />
                            }
                        </span>
                    </div>
                </div>
            </div>
        </div>
    }
</div>



